[Unit]
Description=Enter Leave System Daemon
After=network.target local-fs.target
Requires=network.target local-fs.target

[Service]
User=geek
EnvironmentFile=/home/geek/EnterLeaveSystem/.env
WorkingDirectory=/home/geek/EnterLeaveSystem
ExecStart=/home/geek/EnterLeaveSystem/elsystem
ExecStop=/bin/kill -SIGINT $MAINPID
Restart=always
Type=simple

[Install]
WantedBy=multi-user.target
